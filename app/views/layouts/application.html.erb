<!DOCTYPE html>
<html>
<head>
  <title>BurningAirlines</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if @current_user.present? && @admin.present? %>
<%= link_to 'New Airplane', new_airplane_path %>
<% end %>

<% if @current_user.present? %>
<a href="<%= user_path(@current_user) %>"><%= @current_user.name %></a>
<a href="<%= searches_new_path %>">Book a flight</a>
<%= link_to 'Log out', login_path, :method => 'delete', :data => {:confirm => 'Are you sure you wish to log out?'} %>
<% end %>


<div class="container">
	<%= yield %>
</div>


</body>
</html>
